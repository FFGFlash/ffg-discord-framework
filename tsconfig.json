{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "lib": [ "ESNext" ],
        "strict": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "outDir": "./dist"
    },
    "include": [ "src/**/*" ]
}