{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": [ "ESNext" ],
        "strict": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "outDir": "./build",
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "include": [ "src/**/*" ]
}