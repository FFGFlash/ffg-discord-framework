{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "strict": true,
        "outDir": "build",
        "noEmit": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "include": [ "src/**/*" ]
}